{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "jsx": "react",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/**.ts",
        "src/**/**.tsx",
        "test/**/**.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
